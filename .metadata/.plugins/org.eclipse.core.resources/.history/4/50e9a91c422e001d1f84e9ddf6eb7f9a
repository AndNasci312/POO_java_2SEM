package aula_31082022;

public class ObjetoCarro {

	public static void main(String[] args) {
		
		// alt, shift e r / alt + setinha do teclado
		
		ClasseCarro nCarro = new ClasseCarro();
		nCarro.setMarca("vw");
		nCarro.setModelo("fox");
		nCarro.setCor("azul");
		nCarro.setKm(15560);
		nCarro.setCapacidadeTanque(40);
		nCarro.setKmPorLitro(10);
		nCarro.setPreco(10000);
		
		
		System.out.println("DADOS DO CARRO 1");
		System.out.println("--------------------------");
		System.out.println("marca: " + nCarro.marca);
		System.out.println("modelo: " + nCarro.modelo);
		System.out.println("cor: " + nCarro.cor);
		System.out.println("Km: " + nCarro.km);
		System.out.println("rodagem do veículo: " + nCarro.caucularKm());
		System.out.println("preço: " + nCarro.preco);
		System.out.println("desconto: " + nCarro.calcDesconto(2.5));
		System.out.println("valor com desconto: " + nCarro.valorComDesconto);
		System.out.println(" ");
		
		//---------------------------------------------------------------------
		
		ClasseCarro nCarro2 = new ClasseCarro();
